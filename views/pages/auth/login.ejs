<%- include('../../partials/head.ejs')  %>

<div class=" container my-container my-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card card-body" style="background-color: rgba(236,240,241,35)">
                <h4>Create A New Account</h4>
                <form action="/auth/login " method="POST">

                    <div class="form-group">
                        <label for="email">Enter Your Valid Email</label>
                        <input type="email" name="email" id="email" class="form-control  
                        <%= error.email? 'is-invalid' : '' %>">
                        <div class="text-danger">
                            <%= error.email && error.email %>
                        </div>
                    </div>
 
                    <div class="form-group">
                        <label for="password">Enter Strong Password</label>
                        <input type="password" name="password" id="password" class="form-control form-control  
                        <%= error.password ? 'is-invalid' : '' %>">
                        <div class="text-danger">
                            <%= error.password && error.password %>
                        </div>
                    </div>            
                    <input type="submit" class="btn btn-primary" value="Login" style="margin-top: 15px;">

                </form>
                <a href="/auth/signup" class="my-3 text-center text-decoration-none "> Dont have An Accounte? Create one</a>
            </div>
        </div>
    </div>
</div>
 
<%- include('../../partials/footer.ejs') %>

</body>
</html>