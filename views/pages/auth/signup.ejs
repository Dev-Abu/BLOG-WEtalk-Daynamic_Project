<%- include('../../partials/head.ejs')  %>

<div class=" container my-container my-5"> 
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card card-body" style="background-color: rgba(236,240,241,35)">
                <h4>Create A New Account</h4>
                <form action="/auth/SignUP " method="POST">
                    <div class="form-group" >
                        <label for="username" class="text" >Enter Your User Name (must be uniq)</label>
                        <input type="text" name="username" id="username" class=" form-control <%= 
                        error.username ? 'is-invalid' : '' %>" value="<%= value.username ? value.username: '' %>">
                        <div class="text-danger">
                            <%= error.username && error.username %>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="email">Enter Your Valid Email</label>
                        <input type="email" name="email" id="email" class="form-control <%=
                        error.email? 'is-invalid' : '' %>" value="<%= value.email ? value.email: '' %>">
                        <div class="text-danger">
                            <%= error.email && error.email %>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="password">Enter Strong Password</label>
                        <input type="password" name="password" id="password" class="form-control <%=
                        error.password? 'is-invalid' : '' %>" value="<%= value.password ? value.password: '' %>">
                        <div class="text-danger">
                            <%= error.password && error.password %>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="confirmPassword">Confirm Your Password</label>
                        <input type="password" name="confirmPassword" id="confirmPassword"
                         class="form-control <% error.name? 'is-invalid' : '' %>" value="<%= value.confirmPassword ? value.confirmPassword: '' %>">
                         <div>
                            <%= error.confirmPassword && error.confirmPassword %>
                        </div>
                    </div>
                    <input type="submit" class="btn btn-primary" value="Signup" style="margin-top: 15px;">
                </form>
                <a href="/auth/login" class="my-3 text-center text-decoration-none ">Already Have An Account? Login Here</a>
            </div>
        </div>
    </div>
</div> 
 
<%- include('../../partials/footer.ejs') %>
         
</body>
</html>